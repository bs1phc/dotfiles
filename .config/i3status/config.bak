general {
        colors = true
        interval = 5 
}

#order += "disk /"
#order += "run_watch VPN"
#order += "wireless _first_"
#order += "ethernet _first_"
#order += "battery 0"
#order += "cpu_temperature 0"
#order += "memory"
#order += "load"
#order += "volume master"
#order += "tztime local"

memory {
        format = "%used"
        threshold_degraded = "10%"
        format_degraded = "MEMORY: %free"
}

disk "/" {
        format = "  %avail/%total "
}


}

run_watch VPN {
        pidfile = "/sys/class/net/tun0"
	format = "%title: "
	format_down = "%title:  "
}
ethernet tun0 {
	format_up="W: %ip"
	format_down="W:down"

}

wireless _first_ {
        format_up = " (%quality at %essid) %ip"
        format_down = " down"
}

ethernet _first_ {
        # if you use %speed, i3status requires root privileges
        format_up = "E: %ip (%speed)"
        format_down = ""
}

battery 0 {
        format = "%status %remaining (%consumption)"
	status_chr = ""
	status_bat = ""
	status_full = ""
	hide_seconds = "true"
	integer_battery_capacity = "true"
	low_threshold = "20"
	threshold_type = "time"
}

cpu_temperature 0 {
        format = " %degrees°C"
}

load {
        format = "%1min"
}

volume master {
        format = " Volume: %volume "
        format_muted = " Volume: Muted (%volume) "
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}

tztime local {
        format = "  %a %b %d | %H:%M:%S"
}
