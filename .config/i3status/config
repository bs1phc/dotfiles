general {
	colors = true
	interval = 5

}

order+="ethernet tun0"
order+="wireless _first_"
order+="load"
order+="disk /"
order+= "memory"
order+= "tztime local"
order+="volume master"
order+= "battery all"

ethernet tun0 {
        format_up="vpn: %ip"
        format_down="vpn:down"

}

wireless _first_ {
        format_up = "W: %ip"
        format_down = "W: down"
}

disk "/" {
        format = "%avail"
}


load {
        format = "%1min"
}


memory {
        format = "%used | %available"
        threshold_degraded = "1G"
        format_degraded = "MEMORY < %available"
}

tztime local {
	format = "%Y-%m-%d %H:%M:%S"
}

volume master {
        format = " Volume: %volume "
        format_muted = " Volume: Muted (%volume) "
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}

battery all {
        format = "%status %percentage %remaining"
